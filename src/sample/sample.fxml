<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>


<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="200" prefHeight="270"/>
    <TextField fx:id="textField" promptText="input message" GridPane.rowIndex="1" GridPane.columnIndex="0"
               onAction="#clickSend" />
    <Button text="Отправить сообщение" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="200"
            textFill="#3d6bf6" onAction="#clickSend"/>
</GridPane>